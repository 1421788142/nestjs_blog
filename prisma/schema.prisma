generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// 用户表
model user {
  id       Int       @id @default(autoincrement()) @db.UnsignedInt
  email    String
  userName String    @unique
  nickName String
  address  String
  gender   Int
  age      Int
  status   Int
  orderNum Int       @default(50)
  userId   String
  password String
  avatar   String?
  role     String?
  remark   String?
  cUserId  String
  cTime    DateTime  @default(now())
  mUserId  String?
  mTime    DateTime? @updatedAt
  extend   String?
  extend1  String?
  extend2  String?
  extend3  String?
}

// 菜单表
model menu {
  id        Int       @id @default(autoincrement()) @db.UnsignedInt
  title     String
  component String
  path      String
  menuType  String
  orderNum  Int       @default(50)
  pId       Int
  icon      String
  perms     String
  isFrame   Int
  status    Int
  keepAlive Int
  hidden    Int
  cUserId   String
  cTime     DateTime  @default(now())
  mUserId   String?
  mTime     DateTime? @updatedAt
  extend    String?
  extend1   String?
}

// 角色表
model role {
  id       Int       @id @default(autoincrement()) @db.UnsignedInt
  roleName String
  roleId   String
  status   Int
  orderNum Int       @default(50)
  remark   String?
  menuId   String
  cUserId  String
  cTime    DateTime  @default(now())
  mUserId  String?
  mTime    DateTime? @updatedAt
  extend   String?
  extend1  String?
}

// 通用参数表
model generalParameters {
  id        Int       @id @default(autoincrement()) @db.UnsignedInt
  name      String
  value     String
  valueType String
  orderNum  Int       @default(50)
  remark    String?
  cUserId   String
  cTime     DateTime  @default(now())
  mUserId   String?
  mTime     DateTime? @updatedAt
  extend    String?
  extend1   String?
}

// 图片表
model uploadFile {
  id       Int      @id @default(autoincrement()) @db.UnsignedInt
  fileId   String
  fileName String
  filePath String
  fileSize Int
  fileType String
  keywords String
  remark   String?
  cUserId  String
  cTime    DateTime @default(now())
  extend   String?
  extend1  String?
}

//项目表
model project {
  id          Int       @id @default(autoincrement()) @db.UnsignedInt
  projectName String
  projectId   String
  orderNum    Int       @default(50)
  status      Int
  remark      String?
  cUserId     String
  cTime       DateTime  @default(now())
  mUserId     String?
  mTime       DateTime? @updatedAt
  extend      String?   @db.Text
  extend1     String?
  extend2     String?
  extend3     String?
}

//目录表
model directory {
  id            Int       @id @default(autoincrement()) @db.UnsignedInt
  directoryName String
  directoryId   String
  orderNum      Int       @default(50)
  projectId     String
  pId           Int
  status        Int
  level         Int
  type          String
  icon          String?
  remark        String?
  cUserId       String
  cTime         DateTime  @default(now())
  mUserId       String?
  mTime         DateTime? @updatedAt
  extend        String?   @db.LongText
  extend1       String?
  extend2       String?
  extend3       String?
}
